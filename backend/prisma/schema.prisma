generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusPostagem {
  EM ABERTO
  RESOLVIDO
  MODERADO
}

// Modelo de usuário
model Usuario {
  id             String   @id @default(uuid())
  nome           String
  email          String   @unique
  senha          String
  dataCadastro   DateTime @default(now())
  dataNascimento DateTime
  fotoPerfil     String?

  // Relacionamentos
  postagens      Postagem[]
  curtidas       Curtida[]
  comentarios    Comentario[]
  notificacoes   Notificacao[]
} 

// Modelo de comentário
model Comentario {
  id        String   @id @default(uuid())
  mensagem  String
  dataEnvio DateTime @default(now())
  
  // Relacionamentos
  usuarioId String
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  postagemId String
  postagem   Postagem @relation(fields: [postagemId], references: [id])
}

// Modelo de curtida
model Curtida {
  id         String   @id @default(uuid())
  dataCurtida DateTime @default(now())

  // Relacionamentos
  usuarioId String
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  postagemId String
  postagem   Postagem @relation(fields: [postagemId], references: [id])
}

// Modelo de notificação
model Notificacao {
  id        String   @id @default(uuid())
  titulo    String
  mensagem  String
  lida      Boolean  @default(false)
  dataEnvio DateTime @default(now())

  // Relacionamentos
  usuarioId String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}

// Modelo de postagem
model Postagem {
  id          String        @id @default(uuid())
  titulo      String
  descricao   String
  dataCriacao DateTime       @default(now())
  localizacao Localizacao?
  categoria   String
  status      StatusPostagem @default(ATIVO)
  curtidas    Int            @default(0)

  // Relacionamentos
  usuarioId   String
  usuario     Usuario        @relation(fields: [usuarioId], references: [id])
  fotos       Foto[]
  comentarios Comentario[]
  curtidasRel Curtida[]
}

// Modelo de localização
model Localizacao {
  id        String  @id @default(uuid())
  latitude  Float
  longitude Float
}

// Modelo de foto
model Foto {
  id         String   @id @default(uuid())
  url        String
  postagemId String
  postagem   Postagem @relation(fields: [postagemId], references: [id])
}
